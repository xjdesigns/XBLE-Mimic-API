{
    "compileOnSave": false,
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es2020",
      "module": "esnext",
      "outDir": "build",
      "strict": true,
      "noImplicitAny": false,
      "removeComments": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
